{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ESNEXT", "DOM"],
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
